---
import { cn } from '../../utils';

const { class: className, hideComment, ...props } = Astro.props;

const path = Astro.url.pathname;
---

<div class={cn('text-sm text-muted-foreground', className)} {...props}>
	{
		!hideComment && (
			<a href="#giscus">
				| <span data-path={path} /> نظرات
			</a>
		)
	}
</div>
